<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">500dp</item>
    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="android:colorAccent">@color/teal2</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/please_wait</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">9</item>
    </style>
    <style name="Custom2" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/please_wait</item>
        <item name="DialogSpotColor">@android:color/holo_blue_bright</item>
        <item name="DialogSpotCount">9</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>